# npm configuration

# Use exact versions when saving dependencies
save-exact=false

# Use the default npm registry
registry=https://registry.npmjs.org/

# Optional: Configure private registry for @prodisco scope
# @prodisco:registry=https://your-private-registry.com/

# Prefer offline installations when possible
prefer-offline=true

# Automatically install peer dependencies
legacy-peer-deps=false

# Engine strict mode (enforce Node.js version)
engine-strict=true

